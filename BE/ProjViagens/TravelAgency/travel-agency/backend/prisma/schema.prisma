datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Destino {
  id       Int      @id @default(autoincrement())
  nome     String
  descricao String
  hoteis   Hotel[]
  pontosTuristicos PontoTuristico[]
}

model Hotel {
  id       Int      @id @default(autoincrement())
  nome     String
  endereco String
  destinoId Int
  destino  Destino  @relation(fields: [destinoId], references: [id])
}

model PontoTuristico {
  id       Int      @id @default(autoincrement())
  nome     String
  descricao String
  destinoId Int
  destino  Destino  @relation(fields: [destinoId], references: [id])
}

