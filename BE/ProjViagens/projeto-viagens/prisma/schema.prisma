datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Destino {
  id            Int       @id @default(autoincrement())
  nome          String
  valor         Float
  data          DateTime
  //hoteis        Hotel[]   @relation("hoteisPorDestino")
}

model PontoTuristico {
  id            Int       @id @default(autoincrement())
  nome          String
  endereco      String
  telefone      String
  valor         Float
  // destino       Destino   @relation(fields: [destinoId], references: [id])
  destinoId     Int
}

model Hotel {
  id            Int       @id @default(autoincrement())
  nome          String
  valor         Float
  avaliacao     Float
  email         String
  site          String
  //destino       Destino   @relation(fields: [destinoId], references: [id])
  destinoId     Int
}